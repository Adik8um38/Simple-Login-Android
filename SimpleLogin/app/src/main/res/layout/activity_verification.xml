<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGray"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/cancelButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <TextView
                android:id="@+id/toolbarTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/toolbarTitleSize"
                android:textStyle="bold"
                tools:text="OTP Code" />

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shape_toolbar_drop_shadow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <LinearLayout
            android:id="@+id/rootLinearLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">

                <TextView
                    android:id="@+id/firstNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="_"
                    android:textSize="@dimen/verificationCodeTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/secondNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="_"
                    android:textSize="@dimen/verificationCodeTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thirdNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="_"
                    android:textSize="@dimen/verificationCodeTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fourthNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="_"
                    android:textSize="@dimen/verificationCodeTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fifthNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="_"
                    android:textSize="@dimen/verificationCodeTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sixthNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="_"
                    android:textSize="@dimen/verificationCodeTextSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/colorNegative"
                android:textSize="@dimen/verificationCodeTextSize"
                tools:text="Error message" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/oneButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/twoButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/threeButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fourButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/fiveButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/sixButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sevenButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/eightButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/nineButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="invisible" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/zeroButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/numPadTextSize" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="90dp" />

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_oval"
                    android:src="@drawable/ic_cancel_24dp"
                    android:padding="25dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>