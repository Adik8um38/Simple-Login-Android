<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="materialAlertDialogTheme">@style/SLMaterialAlertDialog</item>
    </style>

    <!--Custom Switch color-->
    <style name="SLSwitch" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorDarkGray</item>
    </style>

    <!--Custom MaterialAlertDialogTheme-->
    <style name="SLMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNeutralButtonStyle">@style/SLMaterialAlertButtonNeutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/SLMaterialAlertButtonNegative</item>
        <item name="buttonBarPositiveButtonStyle">@style/SLMaterialAlertButtonPositive</item>
        <item name="materialAlertDialogBodyTextStyle">@style/SLMaterialDialogBodyTextStyle</item>
    </style>

    <style name="SLMaterialAlertButtonNeutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="SLMaterialAlertButtonNegative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorNegative</item>
    </style>

    <style name="SLMaterialAlertButtonPositive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fillColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SLMaterialDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>
</resources>
